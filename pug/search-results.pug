                .d-none
                    h1.h2 No results to display.
                    p show related items suggestions
                include ../pug/tokens/shopping-search-meta/shopping-search-meta-bottom.pug
                include ../pug/tokens/shopping-disclaimer/shopping-disclaimer.pug

block scripts
    script(src='../pug/tokens/shopping-search-results/search-results.js')