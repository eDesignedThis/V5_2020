                                .col-2
                                    .border
                                .col-2
                                    .span.text-center.py-4.rounded-circle
                                        span.order-status-icon.fas.fa-truck-loading.bg-secondary-light-2
                                .col-2
                                    .border

                                .col-2                               
                                    .span.text-center.py-4.rounded-circle
                                        span.order-status-icon.fas.fa-home.bg-success.text-white
