    ul.pagination.shopping-pagination--top.mb-0.justify-content-end
        li.page-item
            a.page-link(href='#' aria-label='Previous')
                span(aria-hidden='true') &laquo;
        li.page-item
            a.page-link(href='#') 1
        li.page-item
            a.page-link(href='#') 2
        li.page-item
            a.page-link(href='#') 3
        li.page-item
            a.page-link(href='#' aria-label='Next')
                span(aria-hidden='true') &raquo;