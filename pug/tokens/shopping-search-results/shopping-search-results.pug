.row.search-results-container.mx-auto
    mixin category-cards
        .col-6.col-sm-3.col-md-4.col-lg-3.mb-4
                .card.shopping-card.border
                    .card-body.p-3
                        .row.justify-content-between.mx-auto
                            .col-6.text-left.pl-0
                                .badge.badge-success On Sale Now!
                            .col-6.text-right.pr-0
                                span.far.fa-heart
                        .row.justify-content-center.mx-auto 
                            .col-12.col-xl-8.text-center.py-4
                                a(href="#")
                                    .itemWrapper.mx-auto
                                        img.img-fluid(src='https://pisces.bbystatic.com/image2/BestBuy_US/images/products/5759/5759922_rd.jpg')
                        a.item__title.mt-2.text-center.d-block.mb-0(href="#") [Item Title Goes Here]
                        small.text-center
                            .d-block [Category]
                            .text-center.d-block.mb-2
                                span.fas.fa-running 
                                span  In store Pickup Available
                        .row.mx-auto 
                            .col-12.mx-auto 
                                button.btn.btn-outline-primary.btn-block(href="#") 
                                    small ADD TO CART
    -for (var i=0; i<16; i++)
        +category-cards